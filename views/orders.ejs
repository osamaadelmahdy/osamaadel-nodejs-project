<%- include('parts/header') %>
<%- include('parts/navbar') %>

<div class="container">
    <div class="row ">
        <h1 style="width: 50px;"><%= usersId %></h1>
        <ul class="list-group" style="width: 100%;">
            <% for(let item of cart){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <img style="height: 50px;" src="/img/<%= item.image %>">
                <%= item.name %>
                <p style="width: 50px;"><%= item.amount %></p>
                <span class="badge badge-primary badge-pill">total: <%= item.amount*item.price %></span>
                <span class="badge badge-primary badge-pill">status: <%= item.status %></span>
                <form action="/admin/manage/edit" method="post">
                    <div class="form-group">
                        <input type="hidden" name="id" value="<%= item._id %>">
                        <select id="my-select" class="form-control" name="status">
                            <option>preparing</option>
                            <option>Delivering</option>
                        </select>
                    </div>
                    <input class="form-control" type="submit" value="change">
                </form>
            </li>
            <% } %>
        </ul>

    </div>
</div>

<%- include('parts/footer') %>